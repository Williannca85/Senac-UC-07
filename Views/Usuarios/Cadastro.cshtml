@model Usuario

@{
    ViewData["Title"] = "Cadastro de Usuarios";
}

<h1>Realize o cadastro do usuário</h1>

<div class="row justify-content-md-center">

    <form asp-action="Cadastro" method="POST" class="col-md-4">
        <input type="hidden" asp-for="Id" />
        <div class="form-group">
            <label asp-for="Id">Id</label>
            <input asp-for="Id" class="form-control" required/>
        </div>
        <div class="form-group">
            <label asp-for="Nome">Nome</label>  <!--feito o ajuste de "Ator" para "Autor"-->
            <input asp-for="Nome" class="form-control" required/>
        </div>
        <div class="form-group">
            <label asp-for="login">Login</label>  <!--feito o ajuste de "Ator" para "Autor"-->
            <input asp-for="login" class="form-control" required/>
        </div>
        <div class="form-group">
            <label asp-for="senha">Senha</label>  <!--feito o ajuste de "Ator" para "Autor"-->
            <input asp-for="senha" class="form-control" required/>
        </div>
        <div class="form-group">
            <label asp-for="tipo">Tipo</label>  <!--feito o ajuste de "Ator" para "Autor"-->
            <input asp-for="tipo" class="form-control" required/>
        </div>
        <input type="submit" value="Salvar" class="btn btn-primary"/>

    <select name="tipo" id="userTipo">
        <option value="@Usuario.ADMIN">Administrador</option>
        <option value="@Usuario.PADRAO">Padrão</option>
    </select>

    <input type="submit" value="REGISTRAR">
    </form>
</div>